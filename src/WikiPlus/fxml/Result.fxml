            <Separator orientation="VERTICAL" prefHeight="46.0" prefWidth="27.0" />
            <Hyperlink onAction="#home" prefHeight="46.0" prefWidth="54.0">
               <graphic>
                  <ImageView fitHeight="38.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="/images/wiki.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Hyperlink>
         </children>
      </HBox>
   </top>
   <center>
            <TextArea fx:id="content" editable="false" prefHeight="502.0" prefWidth="998.0" wrapText="true">
